    <h2>Every field must be filled in! </h2>

    <form action="/lessons/<%= @lesson.id %>" method="post">
        <input id="hiddent" type="hidden" name="_method" value="patch">
        <input type="text" name="Title" id="title" value="<%= @lesson.title %>">
        <input type="text" name="Learning Objective" id="learning_obj" value ="<%= @lesson.learning_obj %>">
        <input type="text" name="Length" id="length" value="<%= @lesson.length %>">
        <input type="text" name="Summary" id="summary" value="<%= @lesson.summary %>">
        <input type="text" name="Assessment" id="assessment" value="<%= @lesson.assessment %>">
        <input type="submit" value="submit" id="submit">
    </form>